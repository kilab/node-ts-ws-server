{
  "name": "node-ts-ws-server",
  "version": "0.0.0",
  "description": "Basic WebSocket server written in TypeScript and running on Node.js.",
  "author": {
    "name": "Pawe≈Ç 'kilab' Balicki",
    "url": "https://kilab.pl"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/client.ts' --exec 'ts-node' src/server.ts",
    "start:client:dev": "nodemon --watch 'src/client.ts' --exec 'ts-node' src/client.ts",
    "build": "tsc -p ."
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "websocket": "^1.0.28",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/node": "^10.12.18",
    "@types/websocket": "0.0.40",
    "@types/winston": "^2.4.4",
    "nodemon": "^1.18.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}